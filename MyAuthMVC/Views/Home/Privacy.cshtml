@using Microsoft.AspNetCore.Authentication
@{
    ViewData["Title"] = "Privacy Policy";
}
<h1>@ViewData["Title"]</h1>

<p>Use this page to detail your site's privacy policy.</p>
@if (User.Identity.IsAuthenticated)
{
    <strong>id_Token:</strong>
    <br />
    @await ViewContext.HttpContext.GetTokenAsync("id_token");
    <br />
    <strong>access_Token:</strong>
    <br />
    @await ViewContext.HttpContext.GetTokenAsync("access_token");
    <br />
    <strong>refresh_token</strong>
    <br />
    <span>@await ViewContext.HttpContext.GetTokenAsync("refresh_token")</span>
    <br />
    <strong>Claims:</strong>
    <br />
    @foreach (var claim in User.Claims)
    {
        <span>@claim.Type:</span>
        <span>@claim.Value</span>
        <br />
    }
    <br />
}